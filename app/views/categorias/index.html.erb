<%if !notice.blank?%>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="container-info -categorias">
    <div class="heading">
        <h1 class="title">Categorias</h1>
    </div>

    <div class="wrapper">
        <div class="info-table -categorias">
            <table class="table">
                <thead>
                    <tr class="table-heading">
                        <th class="item -name">Nome</th>
                        <th class="item -actions"></th>
                        <th></th>
                    </tr>
                </thead>

                <tbody class="table-info">
                    <% @categorias.each do |categoria| %>
                    <tr class="list">
                        <td class="item -name" data-th="Nome"><%= categoria.nome %></td>
                        <td class="actions" data-th="Ações">
                            <%= link_to 'Ver', categoria_path(categoria), class: "action -underlined -view" %>
                            <%= link_to 'Editar', edit_categoria_path(categoria), class: "action -underlined -edit" %>
                            <%= link_to 'Apagar', categoria, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "action -underlined -delete" %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <%= link_to '<i class="fa fa-plus"></i> Nova categoria'.html_safe, new_categoria_path, class: "action -new" %>
    </div>
</div>
