<div class="form-container -cliente">
    <div class="wrapper">
        <div class="heading">
            <h1 class="legend">Editando cliente</h1>
        </div>

        <%= form_with(url: "/clientes/atualizar", method: "get", class: "form-register") do |f| %>
            <div class="block -cliente">
                <fieldset class="fieldset -name">
                    <%= f.label :nome, "Nome", class: "label" %>
                    <%= f.text_field :nome, value: @cliente.nome, class: "input", name: "nome", id: "nome", :required => true %>
                </fieldset>

                <fieldset class="fieldset -email">
                    <%= f.label :email, "Email", class: "label" %>
                    <%= f.text_field :email, value: @cliente.email, class: "input", name: "email", id: "email", :required => true %>
                </fieldset>

                <fieldset class="fieldset -password">
                    <%= f.label :senha, "Senha", class: "label" %>
                    <%= f.password_field :senha, class: "input", name: "senha", id: "senha" %>
                </fieldset>
            </div>

            <div class="actions">
                <%= f.submit "Salvar", class: "action -save" %>
            </div>
        <% end %>

        <div class="actions">
            <%= link_to 'Ver cliente', view_clientes_path(email: @cliente.email), class: "action -show" %>
            <%= link_to '<i class="fas fa-reply"></i> Voltar'.html_safe, clientes_path, class: "action -back" %>
        </div>
    </div>
</div>
