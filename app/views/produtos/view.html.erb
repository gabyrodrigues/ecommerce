<div class="product-wrapper">
    <h1 class="title"><%= @produto.nome %></h1>

    <div class="image">
        <%=  image_tag @produto.foto, class: "img", alt: "Imagem do produto" %>
    </div>
    <div class="info">
        <h1 class="price">
            R$ <%= @produto.preco.blank? ? "0.0" : number_with_precision(@produto.preco.blank? ? "0.0" : @produto.preco, :precision => 2, separator: ",", :delimiter => '.')%>
        </h1>

        <div class="actions">
            <div class="control-qty">
                <button type="button" class="control -minus">
                    <i class="fa fa-minus"></i>
                </button>
                <input type="number" id="qty"" class="qty" value="1" min="1" />
                <button type="button" class="control -plus">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
            <button onclick="addToCart('<%= @produto.to_json %>', '<%= url_for(@produto.foto) %>', document.getElementById('qty').value);" class="action -tocart">
                Adicionar ao carrinho
            </button>
        </div>
    </div>
</div>
