<div class="info-table -relatoriocompras" id="lista_cliente">
    <table class="table">
        <thead>
            <tr class="table-heading">
                <th class="item -compra">Cliente ID</th>
                <th class="item -name">Nome do cliente</th>
                <th class="item -email">Email do cliente</th>
                <th class="item -id">Quantidade de compras</th>
            </tr>
        </thead>

        <tbody class="table-info">
            <% @compras_cliente.each do |cliente, quantidade| %>
            <tr class="list">
                <td class="item -compra" data-th="Cliente ID"><%= cliente %></td>
                <% dados_cliente = Cliente.find(cliente) %>
                <td class="item -name" data-th="Nome"><%= dados_cliente.usuario.nome %></td>
                <td class="item -email" data-th="Email"><%= dados_cliente.usuario.email %></td>
                <td class="item -qty" data-th="Quantidade de compras"><%= quantidade %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
